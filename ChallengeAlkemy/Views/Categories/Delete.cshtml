@model ChallengeAlkemy.Data.Entities.Category

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>Estás seguro de eliminar éste género?</h3>
<div>    
    <hr />
    <partial name="_CategoryDetails" />
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-outline-info">Regresar</a>
    </form>
</div>
